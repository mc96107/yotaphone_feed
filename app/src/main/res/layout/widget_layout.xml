<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg_color"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_bg_color">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_text_color"
                    android:paddingLeft="@dimen/title_padding_left"
                    android:paddingRight="@dimen/title_padding_left"
                    android:paddingTop="@dimen/title_padding_top"
                    android:paddingBottom="@dimen/title_padding_top"
                    android:maxLines="2"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                >
            <TextView
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textColor="@color/content_text_color"
                android:paddingLeft="@dimen/content_padding_left"
                android:paddingRight="@dimen/content_padding_left"
                android:paddingTop="@dimen/content_padding_top"
                android:paddingBottom="@dimen/content_padding_top"
                android:textSize="@dimen/content_text_size"
                />
                <LinearLayout
                    android:id="@+id/content_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@mipmap/content_background"
                    android:gravity="center"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/preview_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_eye_black_36dp"
                        android:padding="20dp"
                        />
                    <ImageView
                        android:id="@+id/save_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_bookmark_border_black_36dp"
                        android:padding="20dp"
                        />
                    <ImageView
                        android:id="@+id/rotate_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_screen_rotation_black_36dp"
                        android:padding="20dp"
                        />
                    <ImageView
                        android:id="@+id/close_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_close_black_36dp"
                        android:padding="20dp"
                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg_color"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_bg_color">
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_text_color"
                    android:paddingLeft="@dimen/title_padding_left"
                    android:paddingRight="@dimen/title_padding_left"
                    android:paddingTop="@dimen/title_padding_top"
                    android:paddingBottom="@dimen/title_padding_top"
                    android:maxLines="2"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textColor="@color/content_text_color"
                android:paddingLeft="@dimen/content_padding_left"
                android:paddingRight="@dimen/content_padding_left"
                android:paddingTop="@dimen/content_padding_top"
                android:paddingBottom="@dimen/content_padding_top"
                android:textSize="@dimen/content_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg_color"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_bg_color">
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_text_color"
                    android:paddingLeft="@dimen/title_padding_left"
                    android:paddingRight="@dimen/title_padding_left"
                    android:paddingTop="@dimen/title_padding_top"
                    android:paddingBottom="@dimen/title_padding_top"
                    android:maxLines="2"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textColor="@color/content_text_color"
                android:paddingLeft="@dimen/content_padding_left"
                android:paddingRight="@dimen/content_padding_left"
                android:paddingTop="@dimen/content_padding_top"
                android:paddingBottom="@dimen/content_padding_top"
                android:textSize="@dimen/content_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg_color"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_bg_color">
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_text_color"
                    android:paddingLeft="@dimen/title_padding_left"
                    android:paddingRight="@dimen/title_padding_left"
                    android:paddingTop="@dimen/title_padding_top"
                    android:paddingBottom="@dimen/title_padding_top"
                    android:maxLines="2"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textColor="@color/content_text_color"
                android:paddingLeft="@dimen/content_padding_left"
                android:paddingRight="@dimen/content_padding_left"
                android:paddingTop="@dimen/content_padding_top"
                android:paddingBottom="@dimen/content_padding_top"
                android:textSize="@dimen/content_text_size"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_arrow_down_white_36dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="80dp"
        />
    <ImageView
        android:id="@+id/button_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_arrow_up_white_36dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="80dp"
        />
</FrameLayout>